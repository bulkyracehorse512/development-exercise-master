# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python uses 4-space indents
[*.py]
indent_size = 4

# Trailing whitespace is meaningful in HTML
[*.html]
trim_trailing_whitespace = ignore

# Leave json as is
[*.json]
insert_final_newline = ignore

# Don't modify minified files
[{*.min.js,*.min.css}]
indent_style = ignore
indent_size = ignore
insert_final_newline = ignore
